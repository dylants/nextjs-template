{
  "name": "nextjs-template",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": "20.18.0",
    "npm": "10.8.2"
  },
  "scripts": {
    "build": "next build",
    "build-storybook": "storybook build",
    "check-types": "tsc --noemit",
    "ci:db:fixtures": "dotenv -c test -- ts-node -r tsconfig-paths/register --compiler-options '{\"module\":\"CommonJS\"}' integration-tests/create-fixtures.ts",
    "ci:db:migrate-reset": "dotenv -c test -- prisma migrate reset --skip-seed --force",
    "ci:db:reset": "npm run ci:db:migrate-reset && npm run ci:db:fixtures",
    "ci:down": "docker compose -f ./integration-tests/docker-compose.yml down",
    "ci:up": "docker compose -f ./integration-tests/docker-compose.yml up -d",
    "db:migrate": "dotenv -c development -- prisma migrate dev",
    "db:reset": "dotenv -c development -- prisma migrate reset",
    "db:seed": "dotenv -c development -- prisma db seed",
    "dev": "next dev",
    "eslint": "next lint",
    "lint": "npm run eslint && npm run check-types",
    "start": "next start",
    "storybook": "storybook dev -p 6006",
    "test": "dotenv -c test -- jest",
    "test:ci": "dotenv -c test -- jest --config ./jest.integration-tests.config.ts --runInBand",
    "test:ci:watch": "npm run test:ci -- --watch",
    "test:coverage": "dotenv -c test -- jest --config ./jest.all.config.ts --coverage --runInBand",
    "test:watch": "npm run test -- --watch"
  },
  "prisma": {
    "seed": "ts-node -r tsconfig-paths/register --compiler-options {\"module\":\"CommonJS\"} prisma/seeds/run-seeds.ts"
  },
  "dependencies": {
    "@prisma/client": "5.22.0",
    "@radix-ui/react-label": "2.1.0",
    "@radix-ui/react-slot": "1.1.0",
    "bcrypt": "5.1.1",
    "class-variance-authority": "0.7.0",
    "clsx": "2.1.1",
    "lucide-react": "0.460.0",
    "nanoid": "5.0.8",
    "next": "14.2.18",
    "pino": "9.5.0",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-hook-form": "7.53.2",
    "tailwind-merge": "2.5.4",
    "tailwindcss-animate": "1.0.7",
    "tozod": "3.0.0",
    "zod": "3.23.8",
    "zod-validation-error": "3.4.0"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "3.2.2",
    "@faker-js/faker": "9.2.0",
    "@storybook/addon-essentials": "8.4.5",
    "@storybook/addon-interactions": "8.4.5",
    "@storybook/blocks": "8.4.5",
    "@storybook/nextjs": "8.4.5",
    "@storybook/react": "8.4.5",
    "@storybook/test": "8.4.5",
    "@testing-library/react": "16.0.1",
    "@types/bcrypt": "5.0.2",
    "@types/jest": "29.5.14",
    "@types/node": "20.14.8",
    "@types/react": "18.3.12",
    "@types/react-dom": "18.3.1",
    "@typescript-eslint/eslint-plugin": "8.15.0",
    "@typescript-eslint/parser": "8.15.0",
    "cross-fetch": "4.0.0",
    "dotenv-cli": "7.4.3",
    "eslint": "8.57.0",
    "eslint-config-next": "14.2.18",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-prettier": "5.2.1",
    "jest": "29.7.0",
    "jest-environment-jsdom": "29.7.0",
    "msw": "1.3.5",
    "postcss": "8.4.49",
    "prettier": "3.3.3",
    "prisma": "5.22.0",
    "storybook": "8.4.5",
    "tailwindcss": "3.4.14",
    "ts-node": "10.9.2",
    "typescript": "5.6.3"
  }
}
